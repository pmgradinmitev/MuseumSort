@model PaintingViewModel

<h2>@(Model.Id != null ? $"Редактирай категория: {Model.Name}" : "Създай категория")</h2>
           
<form asp-controller="Painting" asp-action="@(Model.Id != null ? "Update" : "Create")" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="row mb-3 p-1">
        <label asp-for="Name" class="p-0"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="row mb-3 p-1">
        <label asp-for="Author" class="p-0"></label>
        <input asp-for="Author" class="form-control" />
        <span asp-validation-for="Author" class="text-danger"></span>
    </div>
  
    <div class="row justify-content-center">
        <div class="col-4">
            <button type="submit" class="btn btn-primary form-control">@(Model.Id != null ? "Редактирай" : "Създай")</button>
        </div>
        <div class="col-4">
            <a asp-controller="Painting" asp-action="Index" class="btn btn-outline-secondary form-control">Към списъка</a>
        </div>
    </div>
</form>
           